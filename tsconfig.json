{
  "compilerOptions": {
    "target": "esNext",                          
    "module": "commonjs",                    
    "outDir": "./dist",                          
    "strict": true,         
    "noImplicitAny": true,
    "lib": ["esNext"],                     
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"]
}